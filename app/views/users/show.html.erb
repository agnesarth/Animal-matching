<div class="container">
  <div class="mt-5 text-center col shadow p-3 mb-5 bg-light rounded">
    <h2 class="mt-3 mb-5">Mon profil humain</h2>
    <div class="text-center my-2">
      <div class="row">
        <div class="col-12">

          <div class="my-2">
            <i class="fa fa-user" aria-hidden="true"></i></i>
            <h6><%= @user.first_name %> <%= @user.last_name %></h6><br />
          </div>

          <div>
            <i class="fa fa-envelope" aria-hidden="true" ></i>
            <h6><%= @user.email%></h6> <br />
          </div>

          <div class="row" >
            <% @user.pets.each do |pet| %>
              <div class='col-12 col-lg-6 col-xl-3 d-flex alert' style="margin-bottom: 20px;">
                <div class='card card-lg card-body align-items-center bg-primary'>
                  <%if pet.photos.present? %>
                    <% pet.photos.each do |p| %>
                      <%= image_tag p, style: "width: 100px; height: 100px; ", class: "avatar avatar-xlg mb-3 rounded-circle"  %>
                    <% end %>
                  <%else%>
                    <%= image_tag "michat.jpg", style: "width: 100px; height: 100px; ", class: "avatar avatar-xlg mb-3 rounded-circle"  %>
                  <%end%>
                  <h6 class='mb-0'><%= pet.name%> le <%=pet.breed%></h6>
                  <span><%= pet.animal%></span>
                  <div class='float-right' style='margin-top: 10px;'>
                    <%=link_to "Voir son profil", pet_path(pet), class:'btn btn-sm btn-outline-warning' %>
                  </div>
                  <div class='float-right' style='margin-top: 10px;'>
                    <%if pet.id == @user.default_pet_id%>
                      <i class="fa fa-star fa-3x" aria-hidden="true" style="color:yellow"></i>
                    <%end%>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
        <div class="col md-6 text-center">
          <div class="actions my-3">
            <%= link_to "Ajouter un animal de compagnie", new_pet_path, class:"btn btn-primary" %>
            <%= link_to "Editer mon profil", edit_users_path, class:"btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="offset-8">
    <%= link_to "Editer mon log in", edit_user_registration_path(@user), class:"btn btn-warning order-button" %>
    <%= link_to "Cancel my account", registration_path(@user), class:"btn btn-primary", data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>

  <div class="container font-weight-bold offset-0">
    <%= link_to 'New Pet', new_pet_path %><br>
    <%= link_to " < Retour", :back %>
  </div>

</div>
