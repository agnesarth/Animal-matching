<div class="container">
  <div class="mt-5 text-center my-5 alert col shadow p-3 mb-5 bg-secondary rounded">
    <h2 class="mt-3 mb-5">Mon profil humain</h2>
    <div class="text-center my-2">
      <div class="row">
        <div class="col md-6">
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="fa fa-user" aria-hidden="true"></i></i>
              <p><%= @user.first_name %><%= @user.last_name %></p>  
            </span>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="fa fa-envelope" aria-hidden="true" style="margin-right: 0.4em"></i>
              <%= @user.email %>  
            </span>
          </div>
          <div class="row">
            <% @user.pets.each do |pet| %>
              <div class='col-12 col-lg-6 col-xl-4 d-flex'>
                <div class='card card-lg card-body align-items-center bg-secondary'>
                  <% pet.photos.each do |p| %>
                    <%= image_tag p, style: "width: 100px; height: 100px; ", class: "avatar avatar-xlg mb-3 rounded-circle"  %>
                  <% end %>         
                  <h6 class='mb-0'><%= pet.name%> le <%=pet.breed%></h6>
                  <span><%= pet.animal%></span>
                  <div class='float-right'>
                    <%=link_to "Voir son profil", pet_path(pet), class:'btn btn-sm btn-primary' %> 
                  </div>
                  <%if pet.id == @user.default_pet_id%>  
                    <i class="fa fa-star" aria-hidden="true"></i>
                  <%end%>
                </div>
              </div>
            <%end%>
          </div>
        <div class="col md-6 text-center">
          <div class="actions my-3">          
            <%= link_to "Ajouter un animal de compagnie", new_pet_path, class:"btn btn-primary" %>
            <%= link_to "Editer mon profil", edit_users_path, class:"btn btn-warning" %>
          </div>
        </div>
      </div>
    </div>    
  </div>

  <div class="offset-8">
    <%= link_to "Editer mon log in", edit_user_registration_path(@user), class:"btn btn-outline-danger order-button" %>
    <%= link_to "Cancel my account", registration_path(@user), class:"btn btn-outline-primary", data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
  <div class="container font-weight-bold offset-0">
    <%= link_to " < Retour", :back %>
  </div>
</div>
  
