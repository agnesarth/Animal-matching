<div class="container text-center bg-light">
  <div class="mt-5 col-md-6 offset-md-3 shadow p-3 mb-5 rounded bg-devise">
    <h2 class="mt-5">Editer mon profil</h2>
    <div class="container-fluid">
      <%= form_for(current_user, url: users_path(current_user), method: :put) do |f| %>
        <div class="field">
          <%= f.label "Prénom" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: :first_name %>
        </div><br />
        <div class="field">
          <%= f.label "Nom" %> <br />
          <%= f.text_field :last_name, autocomplete: :last_name %>
        </div><br />
        <div class="field">
          <%= f.label "Animal de compagnie préféré" %> <br />
          <%= f.select :default_pet_id, Pet.where(user_id: current_user.id).collect { |p| [ p.name, p.id ] }, include_blank: true %>
        </div><br />
        <div class="actions">
          <%= f.submit "Mettre à jour", class:"btn btn-outline-primary btn-sm" %>
        </div>
      <% end %>
    </div>
    <div class="mt-5">
      <%= link_to 'Ajouter un pet', new_pet_path %><br>
      <%= link_to "Retour", :back %>
    </div>
  </div>
</div>
