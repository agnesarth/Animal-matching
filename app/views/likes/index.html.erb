              <h5 class="card-title float-left"><%= pet.name%></h5>
              <% pet.tags.each do |tag|%>
                <span class='badge badge-secondary mr-2 mb-1 float-right'><%=tag.value%></span>
              <%end%>
            </div>
            <div id="likeBody<%= pet.id %>" class="card-body">
              <div id="demo" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" >
                  <% unless pet.photos.empty? %>
                    <div class="carousel-item active">
                      <%= image_tag pet.photos.first, class: "card-img-top" %>
                    </div>
                    <% pet.photos[1..-1].each do |p| %>
                      <div class="carousel-item">
                        <%= image_tag p, class: "card-img-top" %>
                      </div>
                    <%end%>
                  <% else %>
                    <div class="carousel-item active">
                      <%= image_tag("paw.svg", {class: "card-img-top"} ) %>
                    </div>
                    <div class="carousel-item">
                      <%= image_tag("paw.svg", {class: "card-img-top"} ) %>
                    </div>
                  <%end%>
                </div>
                      <!---------------------CARD BODY END--------------------->
                <div class="mt-3">
                  <% if pet.short_description != nil %>
                    <h6 class="card-subtitle my-3 text-success text-truncate"><em>"<%= pet.short_description%>"</em></h6>
                  <% end %>
                  <h6 class="card-subtitle mt-2 float-left">
                    <%= pet.animal.capitalize %>,
                    <% if pet.birthdate != nil %>
                      <% if pet.age > 1 %>
                        <%= pet.age %> ans,
                      <% else %>
                        <%= pet.age %> an,
                      <% end %>
                    <% end %>
                    <%= pet.sex %>
                  </h6>
                  <%= link_to pet_like_path(pet.id, pet.likes_as_liked.find_by(liker_id: current_pet).id), method: :delete, remote: true do %>
                    <i id="dislikeButton<%= pet.id %>" class="btn btn-primary btn-sm fa fa-heart float-right"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="container font-weight-bold mb-5">
  <%= link_to "Retour", :back %>
</div>


