<div class="container">
  <div class="font-weight-bold mt-5 mb-5">
    <ol class="breadcrumb-container">
      <li class="breadcrumb-item">
        <%= link_to "Accueil", root_path, class:"item-breadcrumb" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Tags", tags_path, "data-turbolinks" => "false", class:"item-breadcrumb" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Créer un tag", new_tag_path, class:"item-breadcrumb" %>
      </li>
    </ol>
  </div>
  <div class="mt-5 col-md-6 offset-md-3 shadow p-3 mb-5 rounded bg-devise container-pet shadow text-center">
    <i class="fa fa-paw mt-2 fa-5x"></i>
    <h3 class="mt-3 mb-5">Crée ton tag ici pour faciliter la recherche de tes animaux</h3>
    <div class="text-center my-2">
      <%= form_for @tag, :url => tags_path, multipart: true do |f| %>
        <h6 class="card-text mt-2">Tag :</h6>
        <div class="input-group mb-4">
          <%= f.text_field :value, autofocus: true, class:"form-control" %>
        </div>
        <div class="actions my-3">
          <%= f.submit "Créer le tag", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

