<div class="container">
  <h1 class ="my-3"><%= @chatroom.title %></h1>

  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <%= render @chatroom.messages %>
  </div>

<hr />

  <%= form_for @message, remote: true, html: {id: "new_message"} do |f| %>
    <div class="form-group">
      <%= f.label "Message" %>
      <%= f.text_area :body, class: 'form-control', html: {id: "message_body"} %>
      <small class="text-muted">Entre 2 et 1000 caractÃ¨res</small>
    </div>
    <%= f.hidden_field :chatroom_id, :value => @chatroom.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Envoyer", class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>