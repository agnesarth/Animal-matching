<div class="container">
  <h2 class ="my-3 text-center mt-5 mb-5"><%= @chatroom.title %></h2>

  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <%= render @chatroom.messages %>
  </div>

<hr />

  <%= form_for @message, url: "#" do |f| %>
    <div class="form-group">
      <%= f.label "Message" %>
      <%= f.text_area :body, class: 'form-control' %>
      <small class="text-muted">Entre 2 et 1000 caractÃ¨res</small>
    </div>
    <%= f.hidden_field :chatroom_id, :value => @chatroom.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Envoyer", class: 'btn btn-primary btn-lg mb-3' %>
  <% end %>

  <div class="container font-weight-bold mb-5 mt-4">
    <%= link_to "Retour", :back %>
  </div>
</div>