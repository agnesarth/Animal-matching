<div class="jumbotron-fluid jumbotron-devise">
  <div class="container text-center">
    <div class="my-5 col-md-6 offset-md-3 shadow p-3 mb-5 rounded bg-devise">
      <i class="fa fa-paw mt-2 fa-5x"></i>
      <h2 class="mt-3 mb-5">Connexion</h2>
      <div class="text-center my-2 mx-3">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group my-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class:"form-control" %>
          </div>
          <div class="input-group my-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "*****", class:"form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label 'se souvenir de moi' %>
            </div>
          <% end %>
          <div class="actions my-3">
            <%= f.submit "Se connecter",  class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pl-5 ml-2 d-flex justify-content-around">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="font-weight-bold text-left m-5">
      <%= link_to "Retour", root_path, class: "button-back"%>
    </div>
  </div>
</div>
