<div class="container-devise sticky-top">
  <div class="container text-center">
    <div class="mt-5 col-md-6 offset-md-3 shadow p-3 mb-5 rounded bg-devise">
      <i class="fa fa-paw mt-2 fa-5x"></i>
      <h2 class="mt-3 mb-3">Déverouiller: renvoyer les information</h2>

    <div class="text-center my-2">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions my-3">
        <%= f.submit "Renvoyer les informations pour déverrouiller", class:"btn btn-primary" %>
      </div>
    <% end %>
    </div>

      <div class="mt-4 pl-5 ml-2 d-flex justify-content-around">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="container font-weight-bold">
    <%= link_to "Retour", :back , class:"button-back" %>
  </div>
    <%=render 'layouts/footer'%>
</div>
