<div class="container text-center container-pet">
  <div class="mt-5 col-md-6 offset-md-3 shadow p-3 mb-5 rounded bg-devise">
    <i class="fa fa-paw mt-2 fa-5x"></i>
    <h3 class="mt-3 mb-3">Ajoute ton bourreau des coeurs à quatre pattes</h3>

    <div class="text-center my-2">
      <%= form_for @pet, :url => pets_path, multipart: true do |f| %>

        <div class="input-group mb-4">
          <h6 class="card-text mt-2">Nom: <br> <%= f.text_field :name, autofocus: true, class:"form-control" %></h6>
        </div>

        <div class="input-group mb-4">
          <h6 class="card-text mt-2 mb-0">Espèce :</h6> <br>
          <%= f.radio_button :animal, 'Chien', :checked => true %> Chien
          <%= f.radio_button :animal, 'Chat' %> Chat
        </div>

        <div class="input-group mb-4">
          <h6 class="card-text mt-2">Numéro de puce: <br>  <%= f.text_field :chip_number, autofocus: true, class:"form-control" %></h6>
        </div>

        <div class="input-group mb-4">
          <h6 class="card-text mt-2">Âge : <br>  <%= f.number_field :age, autofocus: true, class:"form-control" %></h6>
        </div>

        <div class="input-group mb-4">
          <h6 class="card-text mb-0">Genre: <br>
          <%= f.radio_button :sex, 'Femelle', :checked => true %> Femelle
          <%= f.radio_button :sex, 'Mâle' %> Mâle</h6>
        </div>

        <div class="input-group mb-4">
          <h6 class="card-text mt-2 mb-0">Race :<br>
          <%= f.select :breed, options_for_select(Pet::BREED), include_blank: true, autofocus: true, class:"form-control" %></h6>
        </div>

        <p class="card-text mb-0">Mise en ligne le : <%= Time.now.strftime("%d/%m/%Y") %> </p><br>

        <div class="input-group mb-4">
          <h6 class="card-text mb-0">Photos</h6><br>
          <%= f.file_field :photos, multiple: true, value: "", class: "uploadPreview ml-5 mt-0 mb-2" %><br>
        </div>

        <div id="showPreview"></div>

        <div class="actions my-3">
          <%= f.submit "Mise a jour", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

<div class="container font-weight-bold">
  <%= link_to "Retour", :back , class:"button-back" %>
</div>