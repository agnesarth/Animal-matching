 <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Rechercher">
          <a href="#" class="search_icon"><i class="fa fa-paw"></i></a>
        </div>
      </div>


<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Animal</th>
      <th>Chip number</th>
      <th>Breed</th>
      <th>Sex</th>
      <th>Age</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Pet.all.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.animal %></td>
        <td><%= pet.chip_number %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.age %></td>
        <td><%= pet.photos.count %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>