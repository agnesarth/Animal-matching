<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=image_tag("doggo_home.jpg", class: "d-block w-100", alt: "")%>
    </div>
    <div class="carousel-item">
      <%=image_tag("cat_home.jpeg", class: "d-block w-100", alt: "...")%>
    </div>
    <div class="carousel-item">
      <%=image_tag("doggo_hug_home.jpeg", class: "d-block w-100", alt: "...")%>
    </div>

    <div class="item">
      <div class="content">
        <div class= "text-center carousel-caption">
          <h1 class="title-jumbotron">Matchez. Rencontrez. Jouez.</h1>
          <% unless user_signed_in? %>
            <%= link_to "Se connecter", new_user_session_path, class: "btn btn-outline-primary btn-lg btn-main-page" %>
            <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary btn-lg btn-main-page" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container text-center my-4 pt-4 rounded">
  <h1 class="py-3"><span class="alert alert-primary rounded"> <i class="fa fa-paw"></i> Whispaw</span> le réseau social des animaux de compagnie</h1>
  <h2 class="pb-3"><blockquote>Une app qui a du chien, ils sont félins pour l'autre.</blockquote></h2>
</div>
